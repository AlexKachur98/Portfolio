; -----------------------------------------------------------------------------
; @author Alex Kachur
; @since 2025-10-08
; @purpose Enforce consistent whitespace & line-endings across editors/OSes
; -----------------------------------------------------------------------------

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false